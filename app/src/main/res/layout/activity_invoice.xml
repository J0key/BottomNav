<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InvoiceActivity"
    android:background="@color/main"
    >

    <TextView
        android:id="@+id/invoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Invoice"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="25dp"
        android:textColor="@color/white80"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginBottom="20dp"/>

    <RelativeLayout
        android:id="@+id/detail"
        android:layout_below="@id/invoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/poster"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:src="@drawable/invoice"/>

        <TextView
            android:id="@+id/one"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/poster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/shigatsu"
            android:textColor="@color/white80"
            android:fontFamily="@font/poppins_bold"
            android:textSize="15sp"/>

        <TextView
            android:layout_below="@id/one"
            android:id="@+id/bioskop_inv"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/poster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CGV Jogja City Mall"
            android:textColor="@color/white80"
            android:background="@drawable/invo"
            android:fontFamily="@font/poppins_bold"
            android:textSize="15sp"/>

        <TextView
            android:background="@drawable/invo"
            android:layout_below="@id/bioskop_inv"
            android:id="@+id/inv_date"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/poster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sunday, 19 Okt 2023"
            android:textColor="@color/white80"
            android:fontFamily="@font/poppins_regular"
            android:textSize="15sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Number"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/white80"/>

        <TextView
            android:id="@+id/number"
            android:layout_below="@id/order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#89856378723535"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/white80"/>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_below="@id/number"
            android:id="@+id/seat_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seat"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/white80"/>

        <TextView
            android:id="@+id/seat_inv"
            android:layout_below="@id/seat_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/invo"
            android:text="A1, A2"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/white80"/>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_below="@id/seat_inv"
            android:id="@+id/payment_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/white80"/>

        <TextView
            android:id="@+id/payment_inv"
            android:layout_below="@id/payment_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BNI Mobile Banking"
            android:background="@drawable/invo"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/white80"/>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_below="@id/payment_inv"
            android:id="@+id/fee_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fee"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/white80"/>

        <TextView
            android:id="@+id/fee_inv"
            android:layout_below="@id/fee_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp0"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/white80"/>

<!--        nnejjdfbhnfjbnfjdbfjb-->

        <TextView
            android:id="@+id/hr"
            android:layout_marginTop="7dp"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:text=""
            android:background="@drawable/line"
            android:layout_below="@id/fee_inv"/>

        <TextView
            android:id="@+id/pay_txt"
            android:layout_below="@id/hr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Actual Pay"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/white"/>


        <TextView
            android:layout_marginTop="10dp"
            android:layout_below="@id/pay_txt"
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp35.000"
            android:textSize="22sp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/white"/>


        <ImageView
            android:id="@+id/back_btn"
            android:layout_below="@id/price"
            android:layout_alignParentStart="true"
            android:layout_width="64dp"
            android:layout_height="33dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/button"
            android:padding="7dp"
            android:src="@drawable/left_arrow" />





    </RelativeLayout>

</RelativeLayout>